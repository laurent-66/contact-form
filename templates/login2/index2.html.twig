{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    
    <div class="container-fluid">
    <div class="row">
        <h2 class="text-center m-5">Connexion Administrateur</h2>
        {% if app.user %}
            <a type="button" class="btn btn-primary" href="{{path('contact-list')}}">List</a>
        {% endif %}
    </div>
        <div class="container my-4">
            <form>
                <div class="form-group" action="{{ path('app_login') }}" method="post">
                    <label for="username">Email</label>
                    <input type="email" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Votre email">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" class="form-control" id="password" placeholder="Votre mot de passe">
                </div>
                <button type="submit" class="btn btn-primary">Se connecter</button>
            </form>
        </div>
    </div>
{% endblock %}