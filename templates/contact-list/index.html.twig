{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<div class="container-fluid">
  <h2 class="text-center m-5">Liste des contacts</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nom</th>
        <th scope="col">Prénom</th>
        <th scope="col">email</th>
        <th scope="col">Demande traité</th>
        <th scope="col">Demande total</th>
        <th scope="col">Action</th>       
      </tr>
    </thead>
    <tbody>
    {% for contact in contacts %}
      <tr>
        <td>{{ contact.lastname }}</td>
        <td>{{ contact.firstname }}</td>
        <td>{{ contact.email }}</td>
        <td>#</td>
        <td>#</td>
        <td><a class="btn btn-info" href="{{ path('contact-detail', {'id': contact.id }   ) }}">voir</a></td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>

{% endblock %}
